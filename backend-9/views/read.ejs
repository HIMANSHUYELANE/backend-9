<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-slate-900">
    <a class="font-semibold text-zinc-400" href="/">Back Home</a>
    <h1 class="text-cyan-500 my-2 border-b-2 text-center text-2xl font-bold">
      All Users
    </h1>
    <div class="m-7 flex flex-wrap gap-3">
      <% users.forEach(function(user){%>
      <div class="w-70 p-3 bg-zinc-700">
        <div class="h-52 bg-red-500 overflow-x-hidden">
          <img
            class="w-full h-full object-cover object-top"
            src="<%= user.image %>"
            alt=""
          />
        </div>
        <p class="mt-2 text-xl font-semibold text-zinc-300"> <%= user.name %> </p>
        <p class="font-light text-white"> <%= user.email %> </p>
        <div class="flex justify-between mt-3">
          <a class="text-zinc-400" href="/edit/<%= user._id %>">Edit</a>
          <a class="text-red-400" href="/delete/<%= user._id %>">Delete</a>
        </div>
    </div>
        <%  })  %>
    </div>
  </body>
</html>
